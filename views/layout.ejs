<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Preguntas</title>
    <link rel='stylesheet' href='/css/bootstrap.min.css' />
    <link rel='stylesheet' href='/css/style.css' />
    <link rel="icon" href="favicon.ico" type="image/x-icon" />
  </head>
  <body>
    <div id="container">
      <header class="jumbotron text-center">
        <h2>Quiz<span class="hidden-xs">: el juego de las preguntas</span></h2>
      </header>

      <nav class="navbar navbar-default navbar-static-top" role="navigation">
        <div class="container">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Inicio</a>
          </div>
          <div class="collapse navbar-collapse" id="navbar-collapse">
            <ul class="nav navbar-nav navbar-right">
              <li><a href="/quizes">Preguntas</a></li>
              <li><a href="/author">Créditos</a></li>
            </ul>
          </div>
        </div>
      </nav>

      <% if (locals.errors && locals.errors.length) { %>
        <div class="container">
          <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h3>Corregir errores:</h3>
            <% errors.forEach(function(error) { %>
              <%= error.message %><br/>
            <% }); %>
          </div>
        </div>
      <% } %>

      <section class="row">
          <%- body %>
      </section>

      <footer class="navbar navbar-default navbar-fixed-bottom">
        <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand" href="https://github.com/sacrom/quiz">Proyecto en GitHub</a>
          </div>
        </div>
      </footer>

      <script src="/js/jquery-2.1.4.min.js"></script>
      <script src="/js/bootstrap.min.js"></script>
    </div>
  </body>
</html>


<div class='col-xs-12 col-sm-11'>
  <h4 class="col-xs-12 col-sm-9 col-sm-offset-3">Login</h4>
  <form class="form-horizontal" method="post" action="/login">
    <div class="form-group">
      <label for="login" class="control-label col-xs-12 col-sm-3">Login:</label>
      <div class="col-xs-12 col-sm-6">
        <input type="text" name="login" id="login" class="form-control" />
      </div>
    </div>
    <div class="form-group">
      <label for="password" class="control-label col-xs-12 col-sm-3">Clave:</label>
      <div class="col-xs-12 col-sm-6">
        <input type="password" name="password" id="password" class="form-control" />
      </div>
    </div>
    <div class="form-group">
      <a href="/logout" class="btn btn-danger col-xs-6 col-sm-offset-3 col-sm-2">Cancelar</a>
      <button type="submit" class="btn btn-primary col-xs-6 col-sm-offset-2 col-sm-2">Login</button>
    </div>
  </form>
</div>
